{
    "manifest_version": 3,
    "name": "ScreenSpec",
    "version": "1.0.0",
    "description": "Webアプリの画面設計書を効率よく作成・共有するツール",
    "permissions": [
      "activeTab",
      "storage",
      "downloads",
      "notifications"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "ScreenSpec"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["annotation-overlay.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }